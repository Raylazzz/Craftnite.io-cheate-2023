    function keyboardManagement() {
        document.onkeydown = function (m) {
            if (m.key == "Enter") {
                if (chat_opened == false) {
                    chat_opened = true;
                } else if (chat_opened == true) {
                    chat_opened = false;
                }
                if (spam_lock == 'True') {
                    var elt = document.querySelector('input');
                    elt.value = '' + spam_count + ' ' + spam_msg;
                } else {
                    null;
                }
            }
            if (chat_opened == true) {
                spam_count++
            }
            if (FlyEnabled == true) {
                G.CONFIG.a143 = 100
            } else if (FlyEnabled == false) {
                G.CONFIG.a143 = 0
            }
        }
    }
